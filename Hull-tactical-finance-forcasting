   "source": [
    "import pandas as pd\n",
    "import numpy as np\n",
    "import lightgbm as lgb\n",
    "import gc\n",
    "import sys\n",
    "\n",
    "# ---------------------------------------------------------------------------------\n",
    "# 1. CONFIGURATION\n",
    "# ---------------------------------------------------------------------------------\n",
    "# Standard Kaggle path for this competition (verify if you are running locally)\n",
    "TRAIN_PATH = '/kaggle/input/hull-tactical-market-prediction/train.csv'\n",
    "\n",
    "# Model Hyperparameters (Fast & Robust)\n",
    "LGB_PARAMS = {\n",
    "    'objective': 'regression',\n",
    "    'metric': 'rmse',\n",
    "    'boosting_type': 'gbdt',\n",
    "    'learning_rate': 0.05,\n",
    "    'num_leaves': 31,\n",
    "    'feature_fraction': 0.8,\n",
    "    'bagging_fraction': 0.8,\n",
    "    'bagging_freq': 5,\n",
    "    'verbosity': -1,\n",
    "    'n_jobs': -1,\n",
    "    'seed': 42\n",
    "}\n",
    "\n",
    "# ---------------------------------------------------------------------------------\n",
    "# 2. LOAD & PREPROCESS TRAINING DATA\n",
    "# ---------------------------------------------------------------------------------\n",
    "print(\"Loading training data...\")\n",
    "df_train = pd.read_csv(TRAIN_PATH)\n",
    "\n",
    "# Sort by date to ensure lagged features are calculated correctly\n",
    "df_train = df_train.sort_values('date_id').reset_index(drop=True)\n",
    "\n",
    "print(f\"Original shape: {df_train.shape}\")\n",
    "\n",
    "# ---------------------------------------------------------------------------------\n",
    "# 3. FEATURE ENGINEERING\n",
    "# ---------------------------------------------------------------------------------\n",
    "# The test set provided by the API contains 'lagged' columns. \n",
    "# We must create these same columns in our training set so the model matches.\n",
    "\n",
    "print(\"Creating lagged features to match Test Set format...\")\n",
    "df_train['lagged_forward_returns'] = df_train['forward_returns'].shift(1)\n",
    "df_train['lagged_risk_free_rate'] = df_train['risk_free_rate'].shift(1)\n",
    "df_train['lagged_market_forward_excess_returns'] = df_train['market_forward_excess_returns'].shift(1)\n",
    "\n",
    "# Drop the first row since it will have NaNs for the lagged features\n",
    "df_train = df_train.dropna(subset=['lagged_forward_returns']).reset_index(drop=True)\n",
    "\n",
    "# Define Feature Columns\n",
    "# We select all columns that start with the feature prefixes (M, E, I, P, V, S, MOM, D)\n",
    "# PLUS the lagged columns we just created.\n",
    "feature_cols = [c for c in df_train.columns if c[0] in ['M', 'E', 'I', 'P', 'V', 'S', 'D'] or c.startswith('MOM')]\n",
    "feature_cols += ['lagged_forward_returns', 'lagged_risk_free_rate', 'lagged_market_forward_excess_returns']\n",
    "\n",
    "# The target we want to predict\n",
    "target_col = 'market_forward_excess_returns'\n",
    "\n",
    "print(f\"Training with {len(feature_cols)} features.\")\n",
    "\n",
    "# ---------------------------------------------------------------------------------\n",
    "# 4. TRAIN MODEL (LightGBM)\n",
    "# ---------------------------------------------------------------------------------\n",
    "# Using the last 20% of data for validation to prevent overfitting\n",
    "split_point = int(len(df_train) * 0.80)\n",
    "\n",
    "X_train = df_train.loc[:split_point, feature_cols]\n",
    "y_train = df_train.loc[:split_point, target_col]\n",
    "\n",
    "X_val = df_train.loc[split_point:, feature_cols]\n",
    "y_val = df_train.loc[split_point:, target_col]\n",
    "\n",
    "print(\"Training LightGBM model...\")\n",
    "train_data = lgb.Dataset(X_train, label=y_train)\n",
    "val_data = lgb.Dataset(X_val, label=y_val)\n",
    "\n",
    "model = lgb.train(\n",
    "    LGB_PARAMS,\n",
    "    train_data,\n",
    "    valid_sets=[train_data, val_data],\n",
    "    num_boost_round=1000,\n",
    "    callbacks=[\n",
    "        lgb.early_stopping(stopping_rounds=50),\n",
    "        lgb.log_evaluation(period=50)\n",
    "    ]\n",
    ")\n",
    "\n",
    "# Clean up memory\n",
    "del df_train, X_train, y_train, X_val, y_val\n",
    "gc.collect()\n",
    "\n",
    "import polars as pl\n",
    "import pandas as pd\n",
    "import numpy as np\n",
    "\n",
    "# Ensure model is trained and 'feature_cols' are defined from previous steps\n",
    "# ... (Your training code here) ...\n",
    "\n",
    "def predict(test: pl.DataFrame) -> float:\n",
    "    \"\"\"\n",
    "    Called by the API for every day of the test set.\n",
    "    \"\"\"\n",
    "    # 1. Convert to Pandas\n",
    "    test_df = test.to_pandas()\n",
    "    \n",
    "    # 2. Handle missing columns if necessary (Safety check)\n",
    "    # The API sometimes sends slightly different columns than train.csv\n",
    "    # We ensure all feature_cols exist, filling missing ones with 0\n",
    "    current_cols = set(test_df.columns)\n",
    "    for col in feature_cols:\n",
    "        if col not in current_cols:\n",
    "            test_df[col] = 0.0\n",
    "            \n",
    "    # 3. Predict\n",
    "    # Use the LightGBM model we trained earlier\n",
    "    X_test = test_df[feature_cols]\n",
    "    pred_return = model.predict(X_test)[0]\n",
    "    \n",
    "    # 4. Strategy: Scale prediction to allocation [0, 2]\n",
    "    # If return is positive, we scale up. If negative, we scale down.\n",
    "    # Center point is 1.0 (holding the market)\n",
    "    scaling_factor = 20.0\n",
    "    allocation = 1.0 + (pred_return * scaling_factor)\n",
    "    \n",
    "    # Clip to ensure valid submission\n",
    "    return float(np.clip(allocation, 0.0, 2.0))\n",
    "\n",
    "# -----------------------------------------------------------------------------\n",
    "# 6. START THE INFERENCE SERVER (CORRECTED)\n",
    "# -----------------------------------------------------------------------------\n",
    "print(\"Starting Inference Server...\")\n",
    "\n",
    "# Initialize the server with your predict function\n",
    "inference_server = kaggle_evaluation.default_inference_server.DefaultInferenceServer(predict)\n",
    "\n",
    "if os.getenv('KAGGLE_IS_COMPETITION_RERUN'):\n",
    "    # ---------------------------------------------------------\n",
    "    # SUBMISSION MODE (Runs when you submit to leaderboard)\n",
    "    # ---------------------------------------------------------\n",
    "    inference_server.serve()\n",
    "else:\n",
    "    # ---------------------------------------------------------\n",
    "    # LOCAL TEST MODE (Runs when you click \"Save & Run\")\n",
    "    # ---------------------------------------------------------\n",
    "    print(f\"Running local test using data directory: {competition_root}\")\n",
    "    \n",
    "    # FIX: Pass the FOLDER, not the FILE. \n",
    "    # The API will look for 'test.csv' inside this folder.\n",
    "    inference_server.run_local_gateway(\n",
    "        (\n",
    "            competition_root,  # <--- Pass the folder path here\n",
    "            os.path.join(competition_root, 'sample_submission.csv') # Dummy second argument\n",
    "        )\n",
    "    )\n",
    "\n",
    "print(\"ðŸŽ‰ Submission loop finished!\")"
   ]
  }
